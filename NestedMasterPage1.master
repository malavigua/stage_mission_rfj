                    <asp:Literal ID="LiteralPendingDaysRH" runat="server">0</asp:Literal>
                </div>
                <hr />
                <div class="box-footer">Nombre de jours en attente</div>
            </div>
  
         
            <div id="validationBoxEnAttenteResp" class="validation-box" onclick="document.getElementById('<%= AttenteResp.ClientID %>' ).click()" >
                <div class="box-header">En attente RG</div>
                <div class="box-content">
                    <asp:Literal ID="LiteralPendingDaysResp" runat="server">0</asp:Literal>
                </div>
                <hr />
                <div class="box-footer">Nombre de jours en attente RG</div>
            </div>
        </div>
    
        <asp:Button ID="Valide"  CommandName="Validé" runat="server" style="display:none;" OnCommand="ButtonValidationBox_Click" />
        <asp:Button ID="Refus"  CommandName="Refusé" runat="server" style="display:none;" OnCommand="ButtonValidationBox_Click" />
        <asp:Button ID="AttenteRH"  CommandName="En attente de validation RH" runat="server" style="display:none;" OnCommand="ButtonValidationBox_Click" />
        <asp:Button ID="AttenteResp"  CommandName="En attente" runat="server" style="display:none;" OnCommand="ButtonValidationBox_Click" />
