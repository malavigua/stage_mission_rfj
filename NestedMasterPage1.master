            <div id="validationBoxValidé" class="validation-box" onclick="document.getElementById('<%= Valide.ClientID %>' ).click()">
                <div class="box-header">Validé</div>
                <div class="box-content">
                    <asp:Literal ID="LiteralValidatedDays" runat="server">0</asp:Literal>
                </div>
                <hr />
                <div class="box-footer">Nombre de jours validés</div>
            </div>
            
            
            <div id="validationBoxRefusé" class="validation-box" onclick="document.getElementById('<%= Refus.ClientID %>' ).click()" >
                <div class="box-header">Refusé</div>
                <div class="box-content">
                    <asp:Literal ID="LiteralRefusedDays" runat="server">0</asp:Literal>
                </div>
                <hr />
